  <%if(successMsg && successMsg.length){%>
  <!-- BECOZ successMsg WAS AN ARRAY AND HERE IT WILL STILL PRINT EMPTY ALERT 
BECOZ THERE WAS AN EMPTY ARRAY DUE TO WHICH WE PUT CONDITION successMsg.length AS WELL  -->
  <div
    class="alert alert-success alert-dismissible fade offset-2 show col-8"
    role="alert"
  >
    <strong>Success</strong> <%=successMsg%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <%}%> 
  
  <%if(deleteMsg && deleteMsg.length) { %>
    <div
    class="alert alert-info alert-dismissible fade offset-2 show col-8"
    role="alert"
  >
    <strong>Success</strong> <%=deleteMsg%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
